<?xml version="1.0" encoding="UTF-8"?>

<screen require-authentication="anonymous-all"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd">

    <transition name="mklogin" require-session-token="false">
        <actions>
            <script>
                println partyId
                println username
                println password
                println "-----------------------------------------------------"
                ec.user.loginUser(username, password)
            </script>
        </actions>
        <default-response url="../MKDashboard"/>
        <error-response url="."/>
    </transition>

    <transition name="json" method="options" require-session-token="false">
        <default-response type="none" />
    </transition>


    <widgets>
        <!-- <render-mode>
            <text type="html,vuet" location="component://MKSignUp/screen/MKSignUp/Pages/MKLoginPage.html"/>
        </render-mode> -->
        <label type="h1" text="Log In to Your Account"/>
        <form-single name="MKLoginForm" transition="mklogin">
            <field name="username"><default-field><text-line size="25"/></default-field></field>
            <field name="password"><default-field><password/></default-field></field>
            <field name="submitButton"><default-field title="Submit"><submit/></default-field></field>
        </form-single>
    </widgets>


</screen> 